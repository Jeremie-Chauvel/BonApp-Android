<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2f862f"/>
            <gradient android:angle="-90" android:startColor="#18b418" android:endColor="#1fde1f"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2f862f" />
            <solid android:color="#1fde1f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2f862f" />
            <gradient android:angle="-90" android:startColor="#1fde1f" android:endColor="#18b418" />
        </shape>
    </item>
</selector>